<%= form_for @group do |form| %>
<%= render "error_messages", target: @group %>

  <div>
    <%= form.label :name %>
    <br />
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <br />
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
